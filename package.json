{
  "name": "@eljs/release",
  "version": "0.1.5",
  "description": "release npm package easily",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "release": "bin/release.js"
  },
  "files": [
    "bin",
    "lib",
    "conventional-changelog-config"
  ],
  "scripts": {
    "lint": "eslint 'src/**/*.@(js|ts)' --fix && npm-ensure -t deps",
    "prettier": "prettier --write 'lib/**/*.@(js|ts)'",
    "test": "npm run test:once -- --watch",
    "test:once": "jest --runInBand --forceExit --colors",
    "coverage": "jest --coverage",
    "watch": "tsc -w",
    "build": "rimraf lib && tsc",
    "prerelease": "npm run lint && npm run test:once && npm run build",
    "release": "node ./bin/release.js",
    "release:quick": "node ./bin/release.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chnliquan/release"
  },
  "keywords": [
    "release",
    "script",
    "conventional-changelog"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{bin,src,test}/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "ensure": {
    "deps": {
      "checkDirs": [
        "bin/**/*",
        "src/**/*"
      ]
    }
  },
  "dependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "chalk": "^4.1.0",
    "commander": "^6.2.1",
    "conventional-changelog": "^3.1.21",
    "inquirer": "^7.2.0",
    "new-github-release-url": "^1.0.0",
    "open": "^7.3.0",
    "semver": "^7.3.2",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@types/conventional-changelog": "^3.1.0",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/semver": "^7.3.4",
    "@types/signale": "^1.4.1",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "npm-ensure": "^1.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "author": "chnliquan",
  "publishConfig": {
    "registry": "https://registry.npmjs.org "
  },
  "license": "MIT"
}
